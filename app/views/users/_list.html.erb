<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th>
            <%= user.name %>
          </th>
        </tr>
        <tr>
          <th>introduction</th>
          <th>
            <%= user.introduction %>
          </th>
        </tr>
      </tbody>
    </table>

    <% if user == current_user %>
      <div class="row">
        <%= link_to edit_user_path(user) do %>
          <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_23818" aria-hidden="true"></span>
          <% end %>
      </div>
      <% elsif %>
        <div class="row">
          <%= link_to user_path(current_user) do %>
            <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_23818"></span>
            <% end %>
        </div>
        <% end %>

          <h2>New book</h2>
          <%= form_for(book_new, url: books_path) do |f| %>
            <div class="field row">
              <label class="book_title">Title</label><br>
              <%= f.text_field :title, class: "col-xs-12 book_title" %>
            </div>
            <div class="field row">
              <label class="book_title">Opinion</label><br>
              <%= f.text_area :body, class: "col-xs-12 book_title" %>
            </div>
            <div class="actions row ">
              <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
            </div>
            <% end %>
</div>