<div class="body">

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
<%= render 'users/list', user: @book.user, book_new: @book_new %>
<div class="col-xs-9">

        <h2>Book detail</h2>
        <table>
          <tbody>
          	<tr>
              <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %><br><%=link_to @book.user.name, user_path(@book.user_id)%></td>
              <td><%=link_to @book.title, book_path(@book.id)%></td>
              <td><%= @book.body %></td>
               <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>

  </div>
</div>

