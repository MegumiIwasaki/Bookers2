<div class = "body">

<% if flash[:error].present? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= flash[:error].count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% flash[:error].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
<%= render 'users/list', user: @user, book_new: @book_new %>
<div class="col-xs-9">

        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan ="3"></th>
            </tr>
          </thead>
          <tbody>
          	<% @books.each do |book| %>
          	<tr>
              <td><%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
                  <% end %>
                </td>
              <td><%=link_to book.title, book_path(book)%></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

  </div>
</div>
</div>

