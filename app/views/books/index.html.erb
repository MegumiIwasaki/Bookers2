<div class="body">

  <% if flash[:error].present? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2>
        <%= flash[:error].count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% flash[:error].each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="container">
        <div class="row">
          <%= render 'users/list', user: @user, book_new: @book_new %>
            <div class="col-xs-9">

              <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr class="row">
                    <th class="col-xs-2"></th>
                    <th class="col-xs-3">Title</th>
                    <th class="col-xs-7">Opinion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @books.each do |book| %>
                    <tr class="row">
                      <td class="col-xs-2">
                        <%= link_to user_path(book.user) do %>
                          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
                            <% end %>
                      </td>
                      <td class="col-xs-3">
                        <%=link_to book.title, book_path(book)%>
                      </td>
                      <td class="col-xs-7">
                        <%= book.body %>
                      </td>
                    </tr>
                    <% end %>
                </tbody>
              </table>
            </div>

        </div>
      </div>
</div>